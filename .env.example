# ===========================================
# Discord Task Bot - Environment Variables
# ===========================================
# Copy this file to .env and fill in your actual values

# ===========================================
# DISCORD BOT CONFIGURATION
# ===========================================
# Get your bot token from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here
# Alternative naming (some files use this)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# ===========================================
# SUPABASE DATABASE CONFIGURATION
# ===========================================
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Alternative naming (some files use these)
SUPABASE_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_role_key_here

# ===========================================
# JWT AUTHENTICATION (Required for CMS)
# ===========================================
# Generate a secure random key for JWT tokens
# You can generate one with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your_secure_jwt_secret_key_here

# ===========================================
# CMS ADMIN CREDENTIALS
# ===========================================
# Username and password for accessing the web dashboard
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password_here

# ===========================================
# FLASK/WEB SERVER CONFIGURATION
# ===========================================
# Set to 'production' for production deployments
FLASK_ENV=development
# Directory for storing temporary files (logs, etc.)
DATA_DIR=data

# ===========================================
# DEPLOYMENT URLs (Set after deployment)
# ===========================================
# Railway backend URL (set automatically by Railway)
RAILWAY_PUBLIC_DOMAIN=
# Netlify frontend URL
NETLIFY_SITE_URL=https://your-netlify-site.netlify.app
# API base URL for frontend to connect to backend
API_BASE_URL=https://your-railway-backend.railway.app
# Alternative naming
BACKEND_URL=https://your-railway-backend.railway.app
FRONTEND_URL=https://your-netlify-site.netlify.app

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=https://your-netlify-site.netlify.app,http://localhost:3000

# ===========================================
# OPTIONAL: FUTURE FEATURES
# ===========================================
# Replicate API for AI features (optional)
REPLICATE_API_KEY=your_replicate_api_key_here

# Google Sheets integration (optional)
GOOGLE_CREDENTIALS_PATH=path/to/google_credentials.json
SPREADSHEET_ID=your_google_sheets_id_here

# Environment flag
ENVIRONMENT=development

# ===========================================
# NOTES:
# ===========================================
# 1. Never commit your actual .env file to version control
# 2. Keep JWT_SECRET_KEY and ADMIN_PASSWORD secure and unique
# 3. For production, set FLASK_ENV=production
# 4. Update URLs after deploying to Railway and Netlify
# 5. ALLOWED_ORIGINS should include your production frontend URL
